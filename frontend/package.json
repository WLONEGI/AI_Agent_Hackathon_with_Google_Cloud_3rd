{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbopack",
    "build": "next build",
    "build:turbo": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit --incremental",
    "test": "jest --config=jest.config.js",
    "test:watch": "jest --config=jest.config.js --watch",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "test:unit": "jest --config=jest.config.js --testPathPatterns=tests/unit",
    "test:integration": "jest --config=jest.config.js --testPathPatterns=tests/integration --maxWorkers=1 --forceExit",
    "test:integration:watch": "jest --config=jest.config.js --testPathPatterns=tests/integration --watch --maxWorkers=1",
    "test:integration:coverage": "jest --config=jest.config.js --testPathPatterns=tests/integration --coverage --maxWorkers=1 --forceExit",
    "test:contracts": "jest --config=jest.config.js --testPathPatterns=tests/contracts --maxWorkers=1 --forceExit",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run type-check && npm run lint && npm run test:unit -- --coverage --passWithNoTests && npm run test:integration -- --passWithNoTests && npm run test:e2e",
    "test:quick": "npm run test:unit && npm run test:contracts",
    "test:setup": "node tests/helpers/test-setup.js",
    "test:cleanup": "node tests/helpers/test-cleanup.js"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-browserify": "^3.12.1",
    "firebase": "^10.14.1",
    "next": "15.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "^5.1.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.11",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "lucide-react": "^0.542.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5",
    "uuid": "^11.0.4"
  }
}
